<!DOCTYPE html>
<html>
<head>
    <title>@Page.Title</title>

    <style>
        * {
            margin:0px;
            padding:0px;
        }
        .header {
            width:100%;

            height:100px;

            background-color:blue;

        }
        .navbar {
            width:100%;
            height:50px;

            background-color:yellow;

        }
        .container {
            width:100%;
            height:1000px;

            background-color:white;


        }

        .container .sidebar {
            width:20%;
            height:100%;

            background-color:blue;
            float:left;
        }
            .container .content {
                width: 60%;
                height: 100%;
                background-color: white;
                float: left;
            }
            .container .ads {
                width: 20%;
                height: 100%;
                background-color: blue;
                float: left;
            }
        .footer {
            width:100%;
            height:80px;
            background-color:yellow;
        }
        h1 {
            color:white;

        }
    </style>
    @RenderSection("styles", required: false)
</head>
<body>
    <div class="header">
        <h1>Hello World</h1>
    </div>
    <div class="navbar"></div>
    <div class="container">
        <div class="sidebar"></div>
        <div class="content">
            @RenderBody()
        </div>
        <div class="ads"></div>
    </div>
    <div class="footer"></div>
</body>
</html>
