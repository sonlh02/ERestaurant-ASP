@model List<ERestaurant.Models.Category>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <style>
        table {
            border-collapse:collapse;
        }
    </style>
</head>
<body>
    <div> 
        <h2>Danh sach danh muc san pham</h2>
        @Html.ActionLink("Them moi","Add")
        <table border="1" cellpadding="5" cellspacing="0">
            <tr>
                <th>ID</th>
                <th>Ten danh muc</th>
                <th>Ten danh muc (Tieng Viet)</th>
                <th>Active</th>
            </tr>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.NameVN</td>
                    <td>@item.Active</td>
                    <td>
                        @Html.ActionLink("Sua","Edit")
                        @Html.ActionLink("Xoa","Delete")
                    </td>
                </tr>
            }
        </table>
    </div>
</body>
</html>
